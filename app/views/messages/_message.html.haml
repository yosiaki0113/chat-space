.message
  .message-source
    .message-source__user-name
      = message.user.name
    .message-source__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-content
    - if message.body.present?
      %p.message-content__detail
        = message.body
    = image_tag message.image.url, class: 'message-content__image' if message.image.present?